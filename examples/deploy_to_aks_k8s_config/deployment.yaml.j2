apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: {{application_name}}
spec:
  template:
    metadata:
      labels:
        app: {{application_name}}
    spec:
      containers:
      - name: {{application_name}}
        image: sdhcontainerregistryshared.azurecr.io/my_image:{{docker_tag}}
        ports:
        - containerPort: 8080
        env:
        - name: ENV_VARIABLE
          valueFrom:
            secretKeyRef:
              name: {{application_name}}-secret
              key: secret_value
      imagePullSecrets:
      - name: acr-auth
