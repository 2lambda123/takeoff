apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: my_app_name
spec:
  template:
    metadata:
      labels:
        app: my_app_name
    spec:
      containers:
      - name: my_app_name
        image: sdhcontainerregistryshared.azurecr.io/my_image:{{docker_tag}}
        ports:
        - containerPort: 8080
        env:
        - name: ENV_VARIABLE
          valueFrom:
            secretKeyRef:
              name: my_secret_name
              key: secret_value
      imagePullSecrets:
      - name: acr-auth
